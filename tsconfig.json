{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es6",
        "removeComments": false,
        "outDir": "dist",
        "rootDir": "src",
        "noUnusedLocals": true,
        "inlineSourceMap": true,
        "inlineSources": true,
        "declaration": true,
        "strict": true,
        "moduleResolution": "node",
        "forceConsistentCasingInFileNames": true,
        "experimentalDecorators": true,
        "noEmitHelpers": true,
        "importHelpers": true,
        "lib": ["es6", "es2017.object"],
        "types": ["node", "jest"],
        "plugins": [
            {
                "name": "tslint-language-service",
                "alwaysShowRuleFailuresAsWarnings": true,
                "ignoreDefinitionFiles": true
            }
        ]
    },
    "exclude": ["node_modules", "dist", "@types", "tests", "examples", "tools", "**/__tests__"]
}
